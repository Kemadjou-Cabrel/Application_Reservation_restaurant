<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Application_Reservation"
        xmlns:MyUserControls="clr-namespace:Application_Reservation.Views.MyUserControls" x:Class="Application_Reservation.MainWindow"
        mc:Ignorable="d"
        Title="{Binding Titrefenetre}" Height="595" Width="855">
    <Grid HorizontalAlignment="Center" Width="855">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Top" Height="62" Width="304" Margin="209,18,0,0">
            <Button Content="Reservation" 
                Height="62" 
                Width="105" Background="#FFBA9797" FontSize="18"
                Click="btnAjouter_Click"
                
                />
            <Button x:Name="btnTables" Content="Tables" Height="62" Width="100" Background="#FFBA9797" FontSize="18" Click="btnTables_Click"/>
            <Button Content="Menu" Width="99" Height="62" Background="#FFBA9797" FontSize="18"/>
        </StackPanel>
        <Grid x:Name="grContent" Grid.Row="1" Background="#FF978686"/>

    </Grid>

</Window>
